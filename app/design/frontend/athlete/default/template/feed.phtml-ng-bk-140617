<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.2.6/jquery.min.js"></script>

<script type="text/javascript">var siteUrl = "http://freshpets.exxelnet.sg/";</script>
<script type="text/javascript">
	function shoe_detail(value){
		
		//alert(value);
		strURL=siteUrl;
		xend=strURL.lastIndexOf("/")+1;
		var base_url=strURL.substring(0,xend);
		strURL="detail.php?";
		if(strURL.substring(0,4)!='http'){
			strURL=base_url+strURL;
		}
		var strSubmit="";
		if(value!=null){
			strSubmit="value="+value;
		}
		//alert(""+strURL+strSubmit);
		$.ajax({
			type: "GET",
			url: strURL+strSubmit,
			cache: false,
			async: false,
			success: function(responseText) {
			$("#dog_detail").html(responseText);
			}
		});
	}
</script>


